# Development Dockerfile with hot-reload capability
FROM node:18-alpine

WORKDIR /app

# Install global dependencies
RUN npm install -g gulp http-server

# Copy package files
COPY package*.json ./
COPY gulpfile.js ./
COPY tsconfig.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY src ./src

# Create dist directory
RUN mkdir -p dist

# Expose ports (8080 for app, 3000 for watch)
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --quiet --tries=1 --spider http://localhost:8080/ || exit 1

# Start gulp in watch mode and http-server simultaneously
CMD ["sh", "-c", "gulp & http-server dist -p 8080 -c-1 --cors; wait"]
